extends base

block content
    #full
        h3.title Legend
        p
            | In the following table, you will see a list of all the protein localizations currently represented in our data.
            | The color on the left is automatically generated from the name of the localization via a unique mapping.
        .content
            table.ui.celled.table
                thead
                    tr
                        th Color
                        th Localization
                tbody(id="localizationList")
    #title
        a(href="/") CellMap
        
block scripts
    - var delta = 50
    script(type="text/javascript", src="/public/utilities.js")
    script().
        var localizations = initializeLocalizations(!{JSON.stringify(localizations)});
        localizationsTable(localizations);